<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <!-- spring property from env or os -->
    <springProperty scope="context" name="profile" source="spring.profiles.active" defaultValue="dev"/>â€‹
    <springProperty scope="context" name="appName" source="spring.application.name" default="default_app"/>

    <!-- log args -->
    <property name="LOG_FILE" value="./logs/${appName}.log"/>

    <!-- Appender to log to file -->
    <appender name="FLAT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <springProfile name="!pro">
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FLAT_FILE"/>
        </root>
    </springProfile>

    <springProfile name="pro">
        <root level="INFO">
            <appender-ref ref="FLAT_FILE"/>
        </root>
    </springProfile>
</configuration>
